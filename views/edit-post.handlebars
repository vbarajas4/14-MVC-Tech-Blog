<section class = "card">
<div class="row mb-4 project">
  <div class="col-md-5">
    <div class="card-title">
    <h2>
      Edit Post
    </h2>
    </div>
    <form class="edit-post-form">
        <label for="title">Title: </label>
        <input  type="text" id="title" name="title" value="{{postData.title}}">
        <label for="content">Content: </label>
        <textarea id="content" name="content" rows="4" cols="50">{{postData.post_text}}</textarea>
        <input type="submit" value="UPDATE">
        {{!-- <input type="submit" value="Delete"> --}}
        <button class="btn btn-sm btn-danger delete-post" data-id="{{postData.id}}">DELETE</button>
    </form>
</div>
</section>
<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
     